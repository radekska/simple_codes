char upper_case(char &upper){

    int a = toupper(upper);
    upper = static_cast<char>(a);
    return upper;

};

void large( vector <int> &data_vec){
    int large = data_vec.at(0);

    for ( auto vec: data_vec){

        if (vec>=large){
            large=vec;
        }
    }
    cout<<"The largest number in vector is: "<<large<<endl;


}


